{
	"name": "@mind/mf-ladon-styles",
	"version": "1.0.4",
	"scripts": {
		"start": "webpack serve --port 8500",
		"start:standalone": "webpack serve --env standalone",
		"build": "webpack --mode=production",
		"analyze": "webpack --mode=production --env analyze",
		"lint": "eslint src --ext js",
		"prettier:format": "prettier --write 'src'",
		"prettier:check": "prettier --check 'src'",
		"test": "cross-env BABEL_ENV=test jest --passWithNoTests",
		"watch-tests": "cross-env BABEL_ENV=test jest --watch",
		"coverage": "cross-env BABEL_ENV=test jest --coverage"
	},
	"files": [
		"dist",
		"config",
		"releasenotes.md",
		"ladon-plugin.json",
		"ladon-plugin.md"
	],
	"prettier": {
		"useTabs": true,
		"printWidth": 120
	},
	"husky": {
		"hooks": {
			"pre-commit": "npm run prettier:check && pretty-quick --staged"
		}
	},
	"dependencies": {
		"bootstrap": "^5.3.3"
	},
	"devDependencies": {
		"@babel/core": "^7.12.9",
		"@babel/plugin-transform-runtime": "^7.12.1",
		"@babel/preset-env": "^7.12.7",
		"@babel/runtime": "^7.12.5",
		"@types/jest": "^26.0.16",
		"@types/systemjs": "^6.1.0",
		"autoprefixer": "^10.2.6",
		"babel-eslint": "^11.0.0-beta.2",
		"babel-jest": "^26.6.3",
		"concurrently": "^5.3.0",
		"cross-env": "^7.0.3",
		"css-loader": "^5.1.3",
		"eslint": "^7.15.0",
		"eslint-config-important-stuff": "^1.1.0",
		"eslint-config-prettier": "^7.0.0",
		"eslint-plugin-prettier": "^3.2.0",
		"husky": "^4.3.5",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^26.6.3",
		"jest-cli": "^26.6.3",
		"mini-css-extract-plugin": "^2.7.2",
		"postcss-loader": "^5.3.0",
		"prettier": "^2.2.1",
		"pretty-quick": "^3.1.0",
		"sass": "^1.77.8",
		"sass-loader": "^11.0.1",
		"style-loader": "^2.0.0",
		"webpack": "^5.8.0",
		"webpack-cli": "^4.2.0",
		"webpack-config-single-spa": "^4.0.0",
		"webpack-dev-server": "^4.0.0-beta.0",
		"webpack-merge": "^5.4.0"
	},
	"publishConfig": {
		"registry": "https://nexus.mind-consulting.de/repository/npm-private/"
	}
}
